<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="600" prefWidth="900" style="-fx-background-color: #FFFFFF; -fx-padding: 0;" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.miempresa.logistica.ui.LoginController">

    <children>
        <BorderPane prefHeight="600" prefWidth="900" style="-fx-background-color: #FFFFFF;                            -fx-background-radius: 20;                            -fx-border-radius: 20;                            -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 15, 0, 0, 6);                            -fx-padding: 0;">

            <!-- HEADER -->
            <top>
                <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: linear-gradient(to right, #81D4FA, #4FC3F7);                              -fx-background-radius: 20 20 0 0;                              -fx-padding: 15 30;                              -fx-pref-height: 70;                              -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
                    <children>

                        <!-- LOGO EN LA ESQUINA IZQUIERDA -->
                        <ImageView fitHeight="62.0" fitWidth="66.0" preserveRatio="true">
                            <image>
                                <Image url="@Imagenes/Logo.png" />
                            </image>
                        </ImageView>

                        <Region HBox.hgrow="ALWAYS" />

                        <HBox spacing="10">
                            <children>
                                <Button style="-fx-background-color: transparent;                                                -fx-text-fill: white;                                                -fx-font-weight: bold;                                                -fx-cursor: hand;" text="Ayuda" />
                                <Button style="-fx-background-color: transparent;                                                -fx-text-fill: white;                                                -fx-font-weight: bold;                                                -fx-cursor: hand;" text="Contacto" />
                            </children>
                        </HBox>
                    </children>
                </HBox>
            </top>

            <!-- CONTENIDO CENTRAL -->
            <center>
                <StackPane style="-fx-padding: 40;                                    -fx-background-color: #FFFFFF;                                    -fx-background-radius: 0 0 20 20;">
                    <children>
                        <HBox alignment="CENTER" spacing="40">

                            <!-- PANEL IZQUIERDO -->
                            <VBox alignment="CENTER_LEFT" maxWidth="520" minWidth="300" prefWidth="420" spacing="18" style="-fx-background-color: #FFFFFF;                                          -fx-background-radius: 15;                                          -fx-padding: 25;                                          -fx-border-color: #EBEBEB;                                          -fx-border-radius: 15;                                          -fx-border-width: 1;                                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.04), 10, 0, 0, 5);">
                                <children>
                                    <Label style="-fx-font-size: 22px;                                                   -fx-font-weight: bold;                                                   -fx-text-fill: #1976D2;" text="Envíos rápidos y confiables" />
                                    <Label style="-fx-font-size: 14px;                                                   -fx-text-fill: #666;" text="Envío Rápido — Gestión y rastreo en tiempo real." wrapText="true" />

                                    <VBox spacing="6" style="-fx-padding: 10 0 0 0;">
                                        <children>
                                            <Label style="-fx-text-fill: #333;" text="• Entregas el mismo día" />
                                            <Label style="-fx-text-fill: #333;" text="• Rastreo en tiempo real" />
                                            <Label style="-fx-text-fill: #333;" text="• Atención 24/7" />
                                        </children>
                                    </VBox>
                                </children>
                            </VBox>

                            <!-- PANEL DERECHO (Login) -->
                            <VBox alignment="CENTER" maxWidth="420" minWidth="300" prefWidth="360" spacing="14" style="-fx-background-color: #FFFFFF;                                          -fx-background-radius: 15;                                          -fx-padding: 30;                                          -fx-border-color: #EBEBEB;                                          -fx-border-radius: 15;                                          -fx-border-width: 1;                                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 14, 0, 0, 8);">
                                <children>
                                    <Label style="-fx-font-size: 22px;                                                   -fx-font-weight: bold;                                                   -fx-text-fill: #1976D2;" text="Iniciar sesión" />

                                    <TextField fx:id="txtCorreo" promptText="Correo electrónico" style="-fx-pref-width: 300;                                                       -fx-pref-height: 40;                                                       -fx-background-radius: 8;                                                       -fx-border-radius: 8;                                                       -fx-background-color: #F5F5F5;                                                       -fx-border-color: #EBEBEB;                                                       -fx-font-size: 14px;                                                       -fx-text-fill: #333;                                                       -fx-padding: 0 12 0 12;" />

                                    <PasswordField fx:id="txtContrasena" promptText="Contraseña" style="-fx-pref-width: 300;                                                           -fx-pref-height: 40;                                                           -fx-background-radius: 8;                                                           -fx-border-radius: 8;                                                           -fx-background-color: #F5F5F5;                                                           -fx-border-color: #EBEBEB;                                                           -fx-font-size: 14px;                                                           -fx-text-fill: #333;                                                           -fx-padding: 0 12 0 12;" />

                                    <HBox alignment="CENTER" prefWidth="300" spacing="12">
                                        <children>
                                            <CheckBox style="-fx-font-size: 12px; -fx-text-fill: #666;" text="Recordarme" />
                                            <Region HBox.hgrow="ALWAYS" />
                                            <Hyperlink style="-fx-font-size: 12px;                                                               -fx-text-fill: #2196F3;" text="¿Olvidaste tu contraseña?" />
                                        </children>
                                    </HBox>

                                    <Button fx:id="btnLogin" style="-fx-background-color: linear-gradient(to right, #81D4FA, #4FC3F7);                                                    -fx-text-fill: #FFFFFF;                                                    -fx-font-weight: bold;                                                    -fx-font-size: 15px;                                                    -fx-background-radius: 8;                                                    -fx-pref-width: 220;                                                    -fx-pref-height: 40;                                                    -fx-cursor: hand;                                                    -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);" text="Iniciar sesión" />

                                    <HBox alignment="CENTER" spacing="8">
                                        <children>
                                            <Label style="-fx-font-size: 12px; -fx-text-fill: #666;" text="¿No tienes cuenta?" />
                                            <Button style="-fx-background-color: #2196F3;                                                            -fx-text-fill: white;                                                            -fx-font-size: 13px;                                                            -fx-background-radius: 8;                                                            -fx-pref-height: 30;                                                            -fx-cursor: hand;" text="Crear cuenta" />
                                        </children>
                                    </HBox>
                                </children>
                            </VBox>
                        </HBox>
                    </children>
                </StackPane>
            </center>

            <!-- FOOTER -->
            <bottom>
                <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 12 30;                              -fx-background-color: #FFFFFF;                              -fx-border-color: #EBEBEB;                              -fx-border-width: 1 0 0 0;                              -fx-background-radius: 0 0 20 20;">
                    <children>
                        <Label style="-fx-font-size: 12px; -fx-text-fill: #666;" text="© 2025 Envío Rápido" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label style="-fx-font-size: 12px; -fx-text-fill: #2196F3;" text="Términos y Privacidad" />
                    </children>
                </HBox>
            </bottom>
        </BorderPane>
    </children>
</StackPane>
