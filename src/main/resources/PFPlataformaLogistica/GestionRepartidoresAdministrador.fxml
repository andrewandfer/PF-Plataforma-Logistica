<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="700" prefWidth="1200" style="-fx-background-color: #FFFFFF; -fx-padding: 0;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="PFPlataformaLogistica.controller.GestionRepartidoresFormularioController">

    <children>
        <BorderPane prefHeight="700" prefWidth="1200" style="-fx-background-color: #FFFFFF;                            -fx-background-radius: 20;                            -fx-border-radius: 20;                            -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 15, 0, 0, 6);                            -fx-padding: 0;">

            <!-- HEADER -->
            <top>
                <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: linear-gradient(to right, #81D4FA, #4FC3F7);                              -fx-background-radius: 20 20 0 0;                              -fx-padding: 15 30;                              -fx-pref-height: 70;                              -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
                    <children>

                        <!-- LOGO EN LA ESQUINA IZQUIERDA -->
                        <ImageView fitHeight="62.0" fitWidth="66.0" preserveRatio="true">
                            <image>
                                <Image url="@Imagenes/Logo.png" />
                            </image>
                        </ImageView>

                        <Region HBox.hgrow="ALWAYS" />

                        <HBox spacing="10">
                            <children>
                                <Button fx:id="btnAyuda" onAction="#onAyuda" style="-fx-background-color: transparent;                                                -fx-text-fill: white;                                                -fx-font-weight: bold;                                                -fx-cursor: hand;" text="Ayuda" />
                                <Button fx:id="btnContacto" onAction="#onContacto" style="-fx-background-color: transparent;                                                -fx-text-fill: white;                                                -fx-font-weight: bold;                                                -fx-cursor: hand;" text="Contacto" />
                            </children>
                        </HBox>
                    </children>
                </HBox>
            </top>

            <!-- CONTENIDO CENTRAL - Dividido en formulario izquierdo y tabla derecha -->
            <center>
                <HBox spacing="20" style="-fx-padding: 20;">
                    <children>
                        <!-- PANEL IZQUIERDO - Formulario y Botones -->
                        <VBox prefWidth="350" spacing="15" style="-fx-background-color: #FFFFFF;                                                          -fx-background-radius: 15;                                                          -fx-padding: 20;                                                          -fx-border-color: #EBEBEB;                                                          -fx-border-radius: 15;                                                          -fx-border-width: 1;                                                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.04), 10, 0, 0, 5);">
                            <children>
                                <Label style="-fx-font-size: 18px;                                                       -fx-font-weight: bold;                                                       -fx-text-fill: #1976D2;" text="Formulario de Repartidor" />

                                <!-- Campos del formulario -->
                                <VBox spacing="12">
                                    <children>
                                        <VBox spacing="5">
                                            <Label style="-fx-font-weight: bold; -fx-text-fill: #333; -fx-font-size: 12px;" text="Nombre:" />
                                            <TextField fx:id="txtNombre" prefWidth="300" />
                                        </VBox>

                                        <VBox spacing="5">
                                            <Label style="-fx-font-weight: bold; -fx-text-fill: #333; -fx-font-size: 12px;" text="Teléfono:" />
                                            <TextField fx:id="txtTelefono" prefWidth="300" />
                                        </VBox>

                                        <VBox spacing="5">
                                            <Label style="-fx-font-weight: bold; -fx-text-fill: #333; -fx-font-size: 12px;" text="Disponibilidad:" />
                                            <ComboBox fx:id="cbDisponibilidad" prefWidth="300" />
                                        </VBox>

                                        <VBox spacing="5">
                                            <Label style="-fx-font-weight: bold; -fx-text-fill: #333; -fx-font-size: 12px;" text="Zona de Cobertura:" />
                                            <TextField fx:id="txtZonaCobertura" prefWidth="300" />
                                        </VBox>

                                        <VBox spacing="5">
                                            <Label style="-fx-font-weight: bold; -fx-text-fill: #333; -fx-font-size: 12px;" text="Localidad:" />
                                            <TextField fx:id="txtLocalidad" prefWidth="300" />
                                        </VBox>

                                        <VBox spacing="5">
                                            <Label style="-fx-font-weight: bold; -fx-text-fill: #333; -fx-font-size: 12px;" text="Email:" />
                                            <TextField fx:id="txtEmail" prefWidth="300" />
                                        </VBox>

                                        <VBox spacing="5">
                                            <Label style="-fx-font-weight: bold; -fx-text-fill: #333; -fx-font-size: 12px;" text="Contraseña:" />
                                            <TextField fx:id="txtContrasena" prefWidth="300" />
                                        </VBox>
                                    </children>
                                </VBox>

                                <!-- Botones de acción en columna -->
                                <VBox spacing="8" style="-fx-padding: 10 0 0 0;">
                                    <children>
                                        <Button fx:id="btnCrear" onAction="#onCrear" style="-fx-background-color: #4CAF50;                                                                -fx-text-fill: white;                                                                -fx-font-weight: bold;                                                                -fx-background-radius: 8;                                                                -fx-pref-width: 300;                                                                -fx-pref-height: 35;                                                                -fx-cursor: hand;                                                                -fx-font-size: 13px;                                                                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);" text="Crear Repartidor" />
                                        <Button fx:id="btnActualizar" onAction="#onActualizar" style="-fx-background-color: #FF9800;                                                                -fx-text-fill: white;                                                                -fx-font-weight: bold;                                                                -fx-background-radius: 8;                                                                -fx-pref-width: 300;                                                                -fx-pref-height: 35;                                                                -fx-cursor: hand;                                                                -fx-font-size: 13px;                                                                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);" text="Actualizar Repartidor" />
                                        <Button fx:id="btnEliminar" onAction="#onEliminar" style="-fx-background-color: #F44336;                                                                -fx-text-fill: white;                                                                -fx-font-weight: bold;                                                                -fx-background-radius: 8;                                                                -fx-pref-width: 300;                                                                -fx-pref-height: 35;                                                                -fx-cursor: hand;                                                                -fx-font-size: 13px;                                                                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);" text="Eliminar Repartidor" />
                                        <Button fx:id="btnLimpiar" onAction="#onLimpiar" style="-fx-background-color: #9E9E9E;                                                                -fx-text-fill: white;                                                                -fx-font-weight: bold;                                                                -fx-background-radius: 8;                                                                -fx-pref-width: 300;                                                                -fx-pref-height: 35;                                                                -fx-cursor: hand;                                                                -fx-font-size: 13px;                                                                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);" text="Limpiar Campos" />
                                        <Button fx:id="btnVolver" onAction="#onVolver" style="-fx-background-color: #2196F3;                                                                -fx-text-fill: white;                                                                -fx-font-weight: bold;                                                                -fx-background-radius: 8;                                                                -fx-pref-width: 300;                                                                -fx-pref-height: 35;                                                                -fx-cursor: hand;                                                                -fx-font-size: 13px;                                                                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);" text="Volver al Menú" />
                                    </children>
                                </VBox>

                                <!-- Mensaje de estado -->
                                <Label fx:id="lblMensaje" style="-fx-font-size: 12px; -fx-text-fill: #666; -fx-wrap-text: true;" text="" />

                            </children>
                        </VBox>

                        <!-- PANEL DERECHO - Tabla -->
                        <VBox spacing="15" HBox.hgrow="ALWAYS">
                            <children>
                                <Label style="-fx-font-size: 22px;                                               -fx-font-weight: bold;                                               -fx-text-fill: #1976D2;" text="Gestión de Repartidores" />

                                <!-- Tabla MÁS GRANDE con columna NOMBRE -->
                                <TableView fx:id="tablaRepartidores" prefHeight="550.0" style="-fx-background-color: #FFFFFF;                                                   -fx-border-color: #EBEBEB;                                                   -fx-border-radius: 15;                                                   -fx-border-width: 1;                                                   -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.04), 10, 0, 0, 5);" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="colNombre" prefWidth="150" text="Nombre" />
                                        <TableColumn fx:id="colTelefono" prefWidth="120" text="Teléfono" />
                                        <TableColumn fx:id="colDisponibilidad" prefWidth="130" text="Disponibilidad" />
                                        <TableColumn fx:id="colZonaCobertura" prefWidth="140" text="Zona Cobertura" />
                                        <TableColumn fx:id="colLocalidad" prefWidth="140" text="Localidad" />
                                        <TableColumn fx:id="colEmail" prefWidth="180" text="Email" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </center>

            <!-- FOOTER -->
            <bottom>
                <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 12 30;                              -fx-background-color: #FFFFFF;                              -fx-border-color: #EBEBEB;                              -fx-border-width: 1 0 0 0;                              -fx-background-radius: 0 0 20 20;">
                    <children>
                        <Label style="-fx-font-size: 12px; -fx-text-fill: #666;" text="© 2025 Envío Rápido" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label style="-fx-font-size: 12px; -fx-text-fill: #2196F3;" text="Términos y Privacidad" />
                    </children>
                </HBox>
            </bottom>

        </BorderPane>
    </children>
</StackPane>