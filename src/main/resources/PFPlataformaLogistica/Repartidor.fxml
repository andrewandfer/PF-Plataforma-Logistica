<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controladores.RepartidorController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: #f9f9f9; -fx-font-family: 'Segoe UI';">

    <!-- ENCABEZADO -->
    <Rectangle layoutY="0" width="900" height="80" arcWidth="25" arcHeight="25">
        <fill>
            <LinearGradient startX="0" startY="0" endX="1" endY="0">
                <stops>
                    <Stop offset="0" color="#1976D2"/>
                    <Stop offset="1" color="#42A5F5"/>
                </stops>
            </LinearGradient>
        </fill>
    </Rectangle>

    <Label text="Gestión de Repartidores"
           layoutX="40" layoutY="25"
           style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;"/>

    <!-- CONTENIDO PRINCIPAL -->
    <VBox layoutX="100" layoutY="110" spacing="25" prefWidth="700"
          style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10,0,0,3);">

        <!-- SECCIÓN DE FORMULARIO -->
        <VBox spacing="15">
            <Label text="Datos del Repartidor"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1565C0;"/>

            <!-- Fila 1 -->
            <HBox spacing="20" alignment="CENTER_LEFT">
                <VBox spacing="5">
                    <Label text="ID:" style="-fx-font-size: 14px;"/>
                    <TextField fx:id="txtIdRepartidor" promptText="Ingrese ID del repartidor"
                               prefWidth="250"
                               style="-fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #BBDEFB;"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Nombre:" style="-fx-font-size: 14px;"/>
                    <TextField fx:id="txtNombre" promptText="Ingrese nombre completo"
                               prefWidth="250"
                               style="-fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #BBDEFB;"/>
                </VBox>
            </HBox>

            <!-- Fila 2 -->
            <HBox spacing="20" alignment="CENTER_LEFT">
                <VBox spacing="5">
                    <Label text="Teléfono:" style="-fx-font-size: 14px;"/>
                    <TextField fx:id="txtTelefono" promptText="Ingrese número de contacto"
                               prefWidth="250"
                               style="-fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #BBDEFB;"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Estado:" style="-fx-font-size: 14px;"/>
                    <TextField fx:id="txtEstado" promptText="Activo / Inactivo"
                               prefWidth="250"
                               style="-fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #BBDEFB;"/>
                </VBox>
            </HBox>
        </VBox>

        <!-- BOTONES -->
        <HBox spacing="25" alignment="CENTER" style="-fx-padding: 10;">
            <Button fx:id="btnRegistrar" text="Registrar"
                    style="-fx-background-color: linear-gradient(to right, #42A5F5, #64B5F6);
                           -fx-text-fill: white; -fx-font-weight: bold;
                           -fx-background-radius: 30; -fx-padding: 8 30;"/>
            <Button fx:id="btnActualizar" text="Actualizar"
                    style="-fx-background-color: linear-gradient(to right, #4FC3F7, #29B6F6);
                           -fx-text-fill: white; -fx-font-weight: bold;
                           -fx-background-radius: 30; -fx-padding: 8 30;"/>
            <Button fx:id="btnEliminar" text="Eliminar"
                    style="-fx-background-color: linear-gradient(to right, #0288D1, #0277BD);
                           -fx-text-fill: white; -fx-font-weight: bold;
                           -fx-background-radius: 30; -fx-padding: 8 30;"/>
            <Button fx:id="btnListar" text="Listar"
                    style="-fx-background-color: linear-gradient(to right, #01579B, #039BE5);
                           -fx-text-fill: white; -fx-font-weight: bold;
                           -fx-background-radius: 30; -fx-padding: 8 30;"/>
        </HBox>

        <!-- TABLA -->
        <TableView fx:id="tablaRepartidores" prefHeight="240" prefWidth="640"
                   style="-fx-background-radius: 15; -fx-border-radius: 15; -fx-border-color: #E3F2FD;">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="100"/>
                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="200"/>
                <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="180"/>
                <TableColumn fx:id="colEstado" text="Estado" prefWidth="130"/>
            </columns>
        </TableView>

    </VBox>

</AnchorPane>
