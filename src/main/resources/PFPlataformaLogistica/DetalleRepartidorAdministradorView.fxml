<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="600" prefWidth="1200" style="-fx-background-color: #FFFFFF; -fx-padding: 0;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="PFPlataformaLogistica.controller.DetallesRepartidorController">

    <children>
        <BorderPane prefHeight="600" prefWidth="1200" style="-fx-background-color: #FFFFFF;                            -fx-background-radius: 20;                            -fx-border-radius: 20;                            -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 15, 0, 0, 6);                            -fx-padding: 0;">

            <!-- HEADER -->
            <top>
                <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: linear-gradient(to right, #81D4FA, #4FC3F7);                              -fx-background-radius: 20 20 0 0;                              -fx-padding: 15 30;                              -fx-pref-height: 70;                              -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
                    <children>

                        <Label style="-fx-text-fill: white;
                                      -fx-font-size: 18px;
                                      -fx-font-weight: bold;"
                               text="Detalles del Repartidor" />

                        <Region HBox.hgrow="ALWAYS" />

                        <HBox spacing="10">
                            <children>
                                <Button fx:id="btnAyuda" onAction="#onAyuda" style="-fx-background-color: transparent;                                                -fx-text-fill: white;                                                -fx-font-weight: bold;                                                -fx-cursor: hand;" text="Ayuda" />
                                <Button fx:id="btnContacto" onAction="#onContacto" style="-fx-background-color: transparent;                                                -fx-text-fill: white;                                                -fx-font-weight: bold;                                                -fx-cursor: hand;" text="Contacto" />
                            </children>
                        </HBox>
                    </children>
                </HBox>
            </top>

            <!-- CONTENIDO CENTRAL -->
            <center>
                <StackPane style="-fx-padding: 20;
                                  -fx-background-color: #FFFFFF;
                                  -fx-background-radius: 0 0 20 20;">
                    <children>
                        <VBox spacing="20" style="-fx-alignment: center;">
                            <children>
                                <!-- Título -->
                                <Label fx:id="lblTitulo" style="-fx-font-size: 20px;
                                                               -fx-font-weight: bold;
                                                               -fx-text-fill: #1976D2;"
                                       text="Detalles del Repartidor" />

                                <!-- Tabla de Envíos Asignados -->
                                <VBox spacing="5" style="-fx-background-color: #FFFFFF;
                                                         -fx-background-radius: 10;
                                                         -fx-border-color: #EBEBEB;
                                                         -fx-border-radius: 10;
                                                         -fx-border-width: 1;
                                                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.04), 10, 0, 0, 5);">
                                    <children>
                                        <Label style="-fx-font-size: 14px;
                                                      -fx-font-weight: bold;
                                                      -fx-text-fill: #1976D2;"
                                               text="Envíos Asignados" />
                                        <TableView fx:id="tablaEnviosAsignados"
                                                   prefHeight="350"
                                                   style="-fx-background-color: #FFFFFF;
                                                          -fx-border-color: #EBEBEB;
                                                          -fx-border-radius: 8;
                                                          -fx-border-width: 1;">
                                            <columns>
                                                <TableColumn fx:id="colIDEnvio" text="ID" prefWidth="80" />
                                                <TableColumn fx:id="colFechaCreacion" text="Fecha Creación" prefWidth="120" />
                                                <TableColumn fx:id="colEstadoEnvio" text="Estado" prefWidth="100" />
                                                <TableColumn fx:id="colOrigen" text="Origen" prefWidth="150" />
                                                <TableColumn fx:id="colDestino" text="Destino" prefWidth="150" />
                                            </columns>
                                        </TableView>
                                    </children>
                                </VBox>

                                <!-- Botón Regresar -->
                                <Button fx:id="btnRegresar"
                                        onAction="#onRegresar"
                                        style="-fx-background-color: #9E9E9E;
                                               -fx-text-fill: white;
                                               -fx-font-weight: bold;
                                               -fx-background-radius: 8;
                                               -fx-pref-width: 120;
                                               -fx-pref-height: 40;
                                               -fx-cursor: hand;
                                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);"
                                        text="Regresar" />
                            </children>
                        </VBox>
                    </children>
                </StackPane>
            </center>

            <!-- FOOTER -->
            <bottom>
                <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 12 30;                              -fx-background-color: #FFFFFF;                              -fx-border-color: #EBEBEB;                              -fx-border-width: 1 0 0 0;                              -fx-background-radius: 0 0 20 20;">
                    <children>
                        <Label style="-fx-font-size: 12px; -fx-text-fill: #666;" text="© 2025 Envío Rápido" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label style="-fx-font-size: 12px; -fx-text-fill: #2196F3;" text="Términos y Privacidad" />
                    </children>
                </HBox>
            </bottom>

        </BorderPane>
    </children>
</StackPane>