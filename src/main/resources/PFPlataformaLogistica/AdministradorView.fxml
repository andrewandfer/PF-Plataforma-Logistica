<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.XYChart?>

<StackPane prefHeight="600" prefWidth="900" style="-fx-background-color: #FFFFFF; -fx-padding: 0;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="PFPlataformaLogistica.controller.AdministradorController">

    <children>
        <BorderPane prefHeight="600" prefWidth="900" style="-fx-background-color: #FFFFFF;                            -fx-background-radius: 20;                            -fx-border-radius: 20;                            -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 15, 0, 0, 6);                            -fx-padding: 0;">

            <!-- HEADER -->
            <top>
                <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: linear-gradient(to right, #81D4FA, #4FC3F7);                              -fx-background-radius: 20 20 0 0;                              -fx-padding: 15 30;                              -fx-pref-height: 70;                              -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
                    <children>

                        <!-- LOGO EN LA ESQUINA IZQUIERDA -->
                        <ImageView fitHeight="62.0" fitWidth="66.0" preserveRatio="true">
                            <image>
                                <Image url="@Imagenes/Logo.png" />
                            </image>
                        </ImageView>

                        <Region HBox.hgrow="ALWAYS" />

                        <HBox spacing="10">
                            <children>
                                <Button fx:id="btnAyuda" onAction="#onAyuda" style="-fx-background-color: transparent;                                                -fx-text-fill: white;                                                -fx-font-weight: bold;                                                -fx-cursor: hand;" text="Ayuda" />
                                <Button fx:id="btnContacto" onAction="#onContacto" style="-fx-background-color: transparent;                                                -fx-text-fill: white;                                                -fx-font-weight: bold;                                                -fx-cursor: hand;" text="Contacto" />
                            </children>
                        </HBox>
                    </children>
                </HBox>
            </top>

            <!-- CONTENIDO CENTRAL -->
            <center>
                <StackPane style="-fx-padding: 40;
                                  -fx-background-color: #FFFFFF;
                                  -fx-background-radius: 0 0 20 20;">
                    <children>
                        <VBox spacing="20" style="-fx-alignment: center;">
                            <children>
                                <!-- Título principal -->
                                <Label style="-fx-font-size: 22px;
                                              -fx-font-weight: bold;
                                              -fx-text-fill: #1976D2;"
                                       text="Panel del Administrador" />

                                <!-- Descripción opcional -->
                                <Label style="-fx-font-size: 14px;
                                              -fx-text-fill: #666;"
                                       text="Gestión de usuarios, repartidores, envíos y métricas."
                                       wrapText="true" />

                                <!-- Tabla de Requisitos (RF-010 a RF-014) -->
                                <TableView fx:id="tablaRequisitos"
                                           style="-fx-background-color: #FFFFFF;
                                                  -fx-border-color: #EBEBEB;
                                                  -fx-border-radius: 15;
                                                  -fx-border-width: 1;
                                                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.04), 10, 0, 0, 5);"
                                           prefHeight="200"
                                           VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="colRequisito" text="Requisito" prefWidth="100" />
                                        <TableColumn fx:id="colEspecificacion" text="Especificación" prefWidth="700" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>

                                <!-- Botones de acción para gestión (RF-010) -->
                                <HBox spacing="10" alignment="CENTER">
                                    <children>
                                        <Button fx:id="btnCrear"
                                                onAction="#onCrear"
                                                style="-fx-background-color: linear-gradient(to right, #66BB6A, #388E3C); /* Verde */
                                                       -fx-text-fill: #FFFFFF;
                                                       -fx-font-weight: bold;
                                                       -fx-background-radius: 8;
                                                       -fx-pref-width: 100;
                                                       -fx-pref-height: 40;
                                                       -fx-cursor: hand;
                                                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);"
                                                text="Crear" />
                                        <Button fx:id="btnActualizar"
                                                onAction="#onActualizar"
                                                style="-fx-background-color: linear-gradient(to right, #FFA726, #F57C00); /* Naranja */
                                                       -fx-text-fill: #FFFFFF;
                                                       -fx-font-weight: bold;
                                                       -fx-background-radius: 8;
                                                       -fx-pref-width: 100;
                                                       -fx-pref-height: 40;
                                                       -fx-cursor: hand;
                                                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);"
                                                text="Actualizar" />
                                        <Button fx:id="btnEliminar"
                                                onAction="#onEliminar"
                                                style="-fx-background-color: linear-gradient(to right, #EF5350, #D32F2F); /* Rojo */
                                                       -fx-text-fill: #FFFFFF;
                                                       -fx-font-weight: bold;
                                                       -fx-background-radius: 8;
                                                       -fx-pref-width: 100;
                                                       -fx-pref-height: 40;
                                                       -fx-cursor: hand;
                                                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);"
                                                text="Eliminar" />
                                        <Button fx:id="btnListar"
                                                onAction="#onListar"
                                                style="-fx-background-color: linear-gradient(to right, #29B6F6, #0288D1); /* Azul */
                                                       -fx-text-fill: #FFFFFF;
                                                       -fx-font-weight: bold;
                                                       -fx-background-radius: 8;
                                                       -fx-pref-width: 100;
                                                       -fx-pref-height: 40;
                                                       -fx-cursor: hand;
                                                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);"
                                                text="Listar" />
                                    </children>
                                </HBox>

                                <!-- Panel de Métricas (RF-013 y RF-014) -->
                                <VBox spacing="10" style="-fx-background-color: #FFFFFF;
                                                         -fx-background-radius: 15;
                                                         -fx-padding: 20;
                                                         -fx-border-color: #EBEBEB;
                                                         -fx-border-radius: 15;
                                                         -fx-border-width: 1;
                                                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.04), 10, 0, 0, 5);">
                                    <children>
                                        <Label style="-fx-font-size: 18px;
                                                      -fx-font-weight: bold;
                                                      -fx-text-fill: #1976D2;"
                                               text="Métricas del Sistema" />

                                        <!-- Placeholder para gráfico (JavaFX Charts) -->
                                        <BarChart fx:id="chartMetricas"
                                                  style="-fx-background-color: #FFFFFF;
                                                         -fx-border-radius: 8;
                                                         -fx-border-color: #EBEBEB;
                                                         -fx-border-width: 1;"
                                                  prefHeight="200"
                                                  prefWidth="100">
                                            <xAxis>
                                                <CategoryAxis side="BOTTOM" />
                                            </xAxis>
                                            <yAxis>
                                                <NumberAxis side="LEFT" />
                                            </yAxis>
                                        </BarChart>

                                        <Label style="-fx-font-size: 12px;
                                                      -fx-text-fill: #666;"
                                               text="Gráfico de métricas (promedio de entrega, ingresos, incidencias)."
                                               wrapText="true" />
                                    </children>
                                </VBox>

                            </children>
                        </VBox>
                    </children>
                </StackPane>
            </center>

            <!-- FOOTER -->
            <bottom>
                <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 12 30;                              -fx-background-color: #FFFFFF;                              -fx-border-color: #EBEBEB;                              -fx-border-width: 1 0 0 0;                              -fx-background-radius: 0 0 20 20;">
                    <children>
                        <Label style="-fx-font-size: 12px; -fx-text-fill: #666;" text="© 2025 Envío Rápido" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label style="-fx-font-size: 12px; -fx-text-fill: #2196F3;" text="Términos y Privacidad" />
                    </children>
                </HBox>
            </bottom>

            <!-- Botón de volver en la esquina inferior derecha -->
            <StackPane BorderPane.alignment="BOTTOM_RIGHT" style="-fx-padding: 20 20 30 0;">
                <Button fx:id="btnVolver"
                        onAction="#onVolver"
                        style="-fx-background-color: #2196F3;
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-background-radius: 8;
                               -fx-pref-width: 100;
                               -fx-pref-height: 35;
                               -fx-cursor: hand;
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);"
                        text="Volver" />
            </StackPane>

        </BorderPane>
    </children>
</StackPane>