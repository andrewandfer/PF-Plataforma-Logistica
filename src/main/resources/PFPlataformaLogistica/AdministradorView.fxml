<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="450" prefWidth="600" style="-fx-background-color: #FFFFFF; -fx-padding: 0;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="PFPlataformaLogistica.controller.AdministradorController">

    <children>
        <BorderPane prefHeight="450" prefWidth="600" style="-fx-background-color: #FFFFFF;                            -fx-background-radius: 20;                            -fx-border-radius: 20;                            -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 15, 0, 0, 6);                            -fx-padding: 0;">

            <!-- HEADER -->
            <top>
                <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: linear-gradient(to right, #81D4FA, #4FC3F7);                              -fx-background-radius: 20 20 0 0;                              -fx-padding: 10 20;                              -fx-pref-height: 50;                              -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
                    <children>

                        <!-- LOGO EN LA ESQUINA IZQUIERDA -->
                        <ImageView fitHeight="40" fitWidth="44" preserveRatio="true">
                            <image>
                                <Image url="@Imagenes/Logo.png" />
                            </image>
                        </ImageView>

                        <Region HBox.hgrow="ALWAYS" />

                        <HBox spacing="10">
                            <children>
                                <Button fx:id="btnAyuda" onAction="#onAyuda" style="-fx-background-color: transparent;                                                -fx-text-fill: white;                                                -fx-font-weight: bold;                                                -fx-cursor: hand;" text="Ayuda" />
                                <Button fx:id="btnContacto" onAction="#onContacto" style="-fx-background-color: transparent;                                                -fx-text-fill: white;                                                -fx-font-weight: bold;                                                -fx-cursor: hand;" text="Contacto" />
                            </children>
                        </HBox>
                    </children>
                </HBox>
            </top>

            <!-- CENTRO -->
            <center>
                <VBox spacing="15" style="-fx-padding: 20; -fx-alignment: center;">
                    <children>
                        <!-- Título de bienvenida -->
                        <Label style="-fx-font-size: 22px;                                       -fx-font-weight: bold;                                       -fx-text-fill: #1976D2;" text="Bienvenido, Administrador" />

                        <!-- Menú vertical centrado -->
                        <VBox spacing="10" style="-fx-background-color: #F5F5F5;                                                  -fx-background-radius: 10;                                                  -fx-padding: 15;                                                  -fx-border-color: #EBEBEB;                                                  -fx-border-radius: 10;                                                  -fx-border-width: 1;                                                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.04), 8, 0, 0, 3);                                                  -fx-alignment: center;">
                            <children>
                                <Label style="-fx-font-size: 14px;                                               -fx-font-weight: bold;                                               -fx-text-fill: #1976D2;" text="Menú" />

                                <Button fx:id="btnGestionUsuarios" onAction="#onGestionUsuarios" style="-fx-background-color: #2196F3;                                                -fx-text-fill: white;                                                -fx-font-weight: bold;                                                -fx-background-radius: 8;                                                -fx-pref-width: 180;                                                -fx-pref-height: 35;                                                -fx-cursor: hand;" text="Gestión Usuarios" />

                                <Button fx:id="btnGestionRepartidores" onAction="#onGestionRepartidores" style="-fx-background-color: #2196F3;                                                -fx-text-fill: white;                                                -fx-font-weight: bold;                                                -fx-background-radius: 8;                                                -fx-pref-width: 180;                                                -fx-pref-height: 35;                                                -fx-cursor: hand;" text="Gestión Repartidores" />

                                <Button fx:id="btnGestionEnvios" onAction="#onGestionEnvios" style="-fx-background-color: #2196F3;                                                -fx-text-fill: white;                                                -fx-font-weight: bold;                                                -fx-background-radius: 8;                                                -fx-pref-width: 180;                                                -fx-pref-height: 35;                                                -fx-cursor: hand;" text="Gestión Envíos" />

                                <Button fx:id="btnPanelMetricas" onAction="#onPanelMetricas" style="-fx-background-color: #2196F3;                                                -fx-text-fill: white;                                                -fx-font-weight: bold;                                                -fx-background-radius: 8;                                                -fx-pref-width: 180;                                                -fx-pref-height: 35;                                                -fx-cursor: hand;" text="Panel de Métricas" />

                                <Button fx:id="btnCerrarSesion" onAction="#onCerrarSesion" style="-fx-background-color: #E53935;                                                -fx-text-fill: white;                                                -fx-font-weight: bold;                                                -fx-background-radius: 8;                                                -fx-pref-width: 180;                                                -fx-pref-height: 35;                                                -fx-cursor: hand;" text="Cerrar Sesión" />
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </center>

            <!-- FOOTER -->
            <bottom>
                <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 8 20;                              -fx-background-color: #FFFFFF;                              -fx-border-color: #EBEBEB;                              -fx-border-width: 1 0 0 0;                              -fx-background-radius: 0 0 20 20;">
                    <children>
                        <Label style="-fx-font-size: 10px; -fx-text-fill: #666;" text="© 2025 Envío Rápido" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label style="-fx-font-size: 10px; -fx-text-fill: #2196F3;" text="Términos y Privacidad" />
                    </children>
                </HBox>
            </bottom>

        </BorderPane>
    </children>
</StackPane>
